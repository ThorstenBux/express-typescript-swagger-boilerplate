{
  "name": "express-typescript-swagger-dependencyInjection-boilerplate",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-swagger && npm run tslint",
    "serve": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "test": "jest --forceExit",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "build-swagger": "tsoa routes && npm run build-ts && tsoa swagger"
  },
  "dependencies": {
    "body-parser": "~1.17.1",
    "debug": "~2.6.3",
    "dotenv": "^4.0.0",
    "express": "~4.15.2",
    "inversify": "^4.3.0",
    "inversify-binding-decorators": "^3.0.0",
    "mongoose": "^4.11.7",
    "morgan": "~1.8.1",
    "reflect-metadata": "^0.1.10",
    "swagger-ui-express": "^2.0.6",
    "tsoa": "^1.3.3",
    "typegoose": "^3.1.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.4",
    "@types/dotenv": "^4.0.0",
    "@types/errorhandler": "0.0.30",
    "@types/express": "^4.0.36",
    "@types/morgan": "^1.7.32",
    "concurrently": "^3.5.0",
    "errorhandler": "^1.5.0",
    "nodemon": "^1.11.0",
    "shelljs": "^0.7.8",
    "tslint": "^5.6.0",
    "typescript": "^2.4.2"
  }
}
